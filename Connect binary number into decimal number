#include <stdio.h>
#include <math.h>

int main() {
    long long binary;
    int decimal = 0, i = 0, remainder;

    printf("Enter a binary number: ");
    scanf("%lld", &binary);

    while (binary != 0) {
        remainder = binary % 10;       // Get last digit
        decimal += remainder * pow(2, i); // Convert to decimal
        binary /= 10;                  // Remove last digit
        i++;
    }

    printf("Decimal number = %d\n", decimal);

    return 0;
}
